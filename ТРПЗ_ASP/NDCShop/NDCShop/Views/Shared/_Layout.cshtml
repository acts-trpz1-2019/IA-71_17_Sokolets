<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - NDCShop</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/css")
   
    
</head>
<body>
    <div class="header__container">
        <div class="nav_logo">
            <h3 class="font_style">NCD shop</h3>
        </div>
        <div class="nav_menu">
            <a href='@Url.Action("Index", "Home")'> <p class="font_menu">HOME</p> </a>
            <a href='@Url.Action("Assortment", "Home")'> <p class="font_menu">ASSORTMENT</p> </a>
            <input type="text" id="datepicker" />
        </div>
        <div class="nav_basket">
            <i class="fas fa-shopping-cart"></i>
            <a href='@Url.Action("SignIn", "Home")'><p class="font_menu">SIGN IN</p> </a>

        </div>
    </div>
       
        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - NO COOL DUDES SHOP, you are welcome</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
